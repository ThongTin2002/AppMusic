<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewtitleplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="NHỊP ĐIỆU CẢM XÚC"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <ListView
        android:id="@+id/listviewplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewtitleplaylist" />

    <TextView
        android:text="xem thêm playlist"
        android:textSize="19sp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:paddingLeft="5dp"
        android:layout_below="@id/listviewplaylist"
        android:id="@+id/textviewviewmoreplaylist"
        android:background="#D3DEDC"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="8dp"
        android:textColor="#AB46D2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>