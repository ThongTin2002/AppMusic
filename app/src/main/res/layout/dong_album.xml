<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearcarviewalbum"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/imageviewalbum"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <TextView
            android:textColor="@color/black"
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:text="Ngày xuân long phụng xum vầy"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtenalbum"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#8D8DAA"
            android:textSize="15dp"
            android:maxWidth="200dp"
            android:text="Noo Phước Thịnh"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtencasialbum"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>