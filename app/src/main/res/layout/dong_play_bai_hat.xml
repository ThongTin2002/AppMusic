<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textviewplaynhacindex"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:text="1"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:ellipsize="end"
            android:text="Ten ca khuc"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:layout_toRightOf="@id/textviewplaynhacindex"
            android:layout_marginLeft="10dp"
            android:id="@+id/textviewplaynhactenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:text="ca si"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/textviewplaynhacindex"
            android:id="@+id/textviewplaynhactencasi"
            android:layout_below="@+id/textviewplaynhactenbaihat"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>